    private void jTextField1ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        
   String sear = jTextField1.getText();
        sear = sear.toLowerCase();
        String words[] = sear.split(" ");
    String searched = words[0];
     String toopen = searched.charAt(0)+".db";
        DB db = DBMaker.fileDB(toopen).make();
        ConcurrentMap map = db.hashMap("map").open();
        jTextArea1.setText("");
      int p=0;
        if(map.containsKey(searched)){
                  Vector<String> x =  (Vector<String>)map.get(searched);
                  HashMap <String, String> m = new HashMap <String, String>();
                  for(int i=0; i< x.size(); i++){
                      m.put(x.get(i), null);
                  }
                  db.close();
              for(int q=1; q< words.length-1; q++){
                  p++;
                    searched = words[q];
                    toopen = searched.charAt(0)+".db";
                        db = DBMaker.fileDB(toopen).make();
                        map = db.hashMap("map").open();
                    if(map.containsKey(searched)){
                            x =  (Vector<String>)map.get(searched);
                            for(int i=0; i< x.size(); i++){
                            m.put(x.get(i), null);
                           }
                  db.close();
                    }        
              }
              
        if(p+1 <= words.length-1)
                    p++;
        
        searched = words[p];
        toopen = searched.charAt(0)+".db";
        db = DBMaker.fileDB(toopen).make();
        map = db.hashMap("map").open();      
            if(map.containsKey(searched)){
               x = (Vector<String>) map.get(searched);
                 for(int l=0; l< x.size(); l++){
                     if(m.containsKey(x.get(l)))
                    jTextArea1.append(x.get(l) + "\n");
                 }
            }
        }
        else{
                   jTextArea1.append("Your search - "+searched+" - did not match any documents.\n" +
"\n" +
"Suggestions:\n" +
"\n" +
"Make sure that all words are spelled correctly.\n" +
"Try different keywords.\n" +"Use root words for better searching.\n"+
"Try more general keywords.");
        } 
        
        db.close();
    }                                           

